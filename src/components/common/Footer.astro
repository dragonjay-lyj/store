<style>
  /* 响应式设计：移动端垂直排列 */
  @media (max-width: 768px) {
    nav {
      gap: 8px; /* 调整移动端间距 */
    }
    nav a {
      padding: 10px 0; /* 增加触摸目标高度 */
      display: block;
      text-align: center;
      font-size: 0.95rem; /* 移动端字体稍小 */
    }
    .flex.gap-4 {
      gap: 2rem; /* 移动端社交图标间距 */
    }
  }

  /* 自定义动画 */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }
</style>